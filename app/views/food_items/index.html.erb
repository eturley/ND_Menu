<div class="row">
  <div class="column card">

    <p id="notice"><%= notice %></p>

    <h1>Food Items</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Eatery</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @food_items.each do |food_item| %>
          <tr>
            <td><%= food_item.name %></td>
            <td><%= food_item.full_price %></td>
            <td><%= food_item.eatery.name %></td>
            <% if session[:user_id] %>
              <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
            <% end %>
            <% if session[:user_id] %>
              <td><%= link_to 'Delete', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Food Item', new_food_item_path %>

  </div>
</div>
